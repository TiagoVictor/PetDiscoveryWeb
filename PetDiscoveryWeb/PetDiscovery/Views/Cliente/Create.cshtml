@model PetDiscovery.Models.Cliente

@{
    ViewData["Title"] = "Novo";
}


<h4>Novo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cliente_nome" class="control-label"></label>
                <input asp-for="cliente_nome" class="form-control" />
                <span asp-validation-for="cliente_nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cliente_email" class="control-label"></label>
                <input asp-for="cliente_email" class="form-control" />
                <span asp-validation-for="cliente_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>
