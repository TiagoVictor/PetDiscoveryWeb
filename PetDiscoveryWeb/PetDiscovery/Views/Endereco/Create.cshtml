@model PetDiscovery.Models.Endereco

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Endereco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="endereco_cliente_Id" class="control-label"></label>
                <input asp-for="endereco_cliente_Id" class="form-control" />
                <span asp-validation-for="endereco_cliente_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco_cidade" class="control-label"></label>
                <input asp-for="endereco_cidade" class="form-control" />
                <span asp-validation-for="endereco_cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco_uf" class="control-label"></label>
                <input asp-for="endereco_uf" class="form-control" />
                <span asp-validation-for="endereco_uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco_pais" class="control-label"></label>
                <input asp-for="endereco_pais" class="form-control" />
                <span asp-validation-for="endereco_pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco_rua" class="control-label"></label>
                <input asp-for="endereco_rua" class="form-control" />
                <span asp-validation-for="endereco_rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endereco_numero" class="control-label"></label>
                <input asp-for="endereco_numero" class="form-control" />
                <span asp-validation-for="endereco_numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-outline-success btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>